<Configuration status="WARN">
    <Appenders>
        <File name="LOG_INFO" fileName="logs/LOG_INFO.log" append="false">
            <PatternLayout pattern="%sn %d{HH:mm:ss.SSS} %r [%-5p] [%t] %C{3}.%M(%F:%L) - %m%n"/>
        </File>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%sn %d{HH:mm:ss.SSS} %r [%-5p] [%t] %highlight{%level}{FATAL=bg_red, ERROR=red, WARN=yellow, INFO=green, DEBUG=blue}  %C{3}.%M(%F:%L) - %m%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="all">
            <AppenderRef ref = "LOG_INFO"/>
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>

</Configuration>
